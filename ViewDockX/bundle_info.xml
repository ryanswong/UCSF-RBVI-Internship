<BundleInfo name="ChimeraX-ViewDockX" version="0.1" package="chimerax.viewdockx"
  	    minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>Sample code for implementing ChimeraX bundle</Synopsis>
  <Description>Sample code for implementing ChimeraX bundle.

Implements command "sample count" to report number of atoms and bonds.
  </Description>

    <DataFiles>
      <DataFile>example/*</DataFile>
      <DataFile>lib/*</DataFile>
      <DataFile>lib/*/*</DataFile>
      <DataFile>viewdockx_frame.html</DataFile>
      <DataFile>viewdockx_frame.js</DataFile>
      <DataFile>viewdockx_frame.css</DataFile>

      <!-- <DataFile></DataFile> -->

    </DataFiles>
  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="General"/>
  </Categories>

<AdditionalPackages/>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.1"/>
  </Dependencies>

  <!-- Python and ChimeraX-specific classifiers
       From https://pypi.python.org/pypi?%3Aaction=list_classifiers
       Some Python classifiers are always inserted by the build process.
       These include the Environment and Operating System classifiers
       as well as:
         Framework :: ChimeraX
         Intended Audience :: Science/Research
         Programming Language :: Python :: 3
         Topic :: Scientific/Engineering :: Visualization
         Topic :: Scientific/Engineering :: Chemistry
         Topic :: Scientific/Engineering :: Bio-Informatics
       The "ChimeraX :: Bundle" classifier is also supplied automatically.  -->
  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
]
    <ChimeraXClassifier>ChimeraX :: Tool :: ViewDock :: General :: display docking results</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Command :: viewdock :: General :: display docking results</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: DataFormat :: mol2 :: :: Molecule structure :: .mol2 :: :: :: :: :: mol2 format :: utf-8</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Open :: mol2 :: mol2 ::</ChimeraXClassifier>
]
  </Classifiers>

</BundleInfo>
